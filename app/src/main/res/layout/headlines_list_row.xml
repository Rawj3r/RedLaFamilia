<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- headline thumbnail -->
    <LinearLayout
        android:id="@+id/thumbnail_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dip"
        android:background="@drawable/img_bg"
        android:layout_alignParentLeft="true">

        <!-- thumbnail will load it dynamically -->
        <ImageView
            android:layout_width="85dip"
            android:layout_height="85dip"
            android:src="@drawable/ic_menu_gallery"
            android:id="@+id/headline_img_list"
            />
    </LinearLayout>
    
    <!-- headline title -->
    <TextView
        android:textColor="#040404"
        android:typeface="serif"
        android:textSize="15dip"
        android:textStyle="bold"
        android:paddingTop="2dip"
        android:layout_width="350dip"
        android:layout_height="25dip"
        android:padding="3dip"
        android:id="@+id/headline_title"
        android:layout_alignTop="@id/thumbnail_lay"
        android:layout_toRightOf="@+id/thumbnail_lay"
        android:text="Sir Alex Reritires"/>

    <!-- Headline details -->
    <TextView
        android:layout_below="@id/headline_title"
        android:layout_toRightOf="@id/thumbnail_lay"
        android:layout_width="350dip"
        android:layout_height="75dip"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:typeface="serif"
        android:textColor="#343434"
        android:text="@string/sir"
        android:id="@+id/headline_detail"/>

</RelativeLayout>